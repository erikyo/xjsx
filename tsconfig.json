{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["es2021", "DOM", "DOM.Iterable"],
    "strict": false,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /** XJSX compiler options */
    "jsx": "react-jsx",

    "sourceMap": true,
    "rootDir": "src",
    "outDir": "lib",
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,

    "pretty": false,
    "allowSyntheticDefaultImports": true,
  },
  "include": [
    "src/"
  ]
}
